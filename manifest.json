{
  "manifest_version": 3,
  "name": "Overleaf Dark",
  "description": "Enhance your Overleaf experience with various dark themes including Obsidian Night, Deep Amethyst, and Cosmic Twilight.",
  "version": "0.0.1",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Choose Overleaf Theme"
  },
  "content_scripts": [
    {
      "matches": ["https://*.overleaf.com/*"],
      "js": ["toggle.js"]
    }
  ],
  "permissions": ["storage"],
  "update_url": "https://clients2.google.com/service/update2/crx"
}